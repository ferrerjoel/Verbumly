<?xml version="1.0" encoding="utf-8"?>
<!-- Wrap content before top bar elimination (layout_height) -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:layout_gravity="center"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">
        <!-- Score of the player -->
        <!-- Score -->
        <!-- Placeholder -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menu_placeholder"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/verbumly_logo" />
        <!-- uid -->
        <!-- mail -->
        <!-- name -->
        <!-- Play button -->
        <Button
            android:id="@+id/playBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/playBtn" />
        <!-- Score button -->
        <Button
            android:id="@+id/scoreBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/scoreBtn" />
        <!-- Logout button -->
        <Button
            android:id="@+id/leaderboardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lemonmilk"
            android:text="Leaderboard" />
        <!-- Credits button -->
        <Button
            android:id="@+id/creditsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/creditsBtn" />
        <!-- Logout button -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/logoutBtn" />
    </LinearLayout>
</ScrollView>
