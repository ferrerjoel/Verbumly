<?xml version="1.0" encoding="utf-8"?>
<!-- Wrap content before top bar elimination (layout_height) -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:layout_gravity="center"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">
        <!-- Score of the player -->
        <TextView
            android:id="@+id/myscoreTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:gravity="center"
            android:text="@string/myscoreTv"
            android:textColor="@color/white"
            android:textSize="30sp" />
        <!-- Score -->
        <TextView
            android:id="@+id/scoreTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:gravity="center"
            android:text="@string/scoreTv" />
        <!-- Placeholder -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/menu_placeholder"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/verbumly_logo" />
        <!-- uid -->
        <TextView
            android:id="@+id/uidTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:gravity="center"
            android:text="@string/uidTv" />
        <!-- mail -->
        <TextView
            android:id="@+id/mailTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:gravity="center"
            android:text="@string/mailTv" />
        <!-- name -->
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lemonmilk"
            android:gravity="center"
            android:text="@string/nameTv" />
        <!-- Play button -->
        <Button
            android:id="@+id/playBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/playBtn" />
        <!-- Score button -->
        <Button
            android:id="@+id/scoreBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/scoreBtn" />
        <!-- Logout button -->
        <Button
            android:id="@+id/leaderboardBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lemonmilk"
            android:text="Leaderboard" />
        <!-- Credits button -->
        <Button
            android:id="@+id/creditsBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/creditsBtn" />
        <!-- Logout button -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lemonmilk"
            android:text="@string/logoutBtn" />
    </LinearLayout>
</ScrollView>
